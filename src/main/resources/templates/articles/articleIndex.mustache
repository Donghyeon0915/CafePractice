{{>layout/header}}
<link rel="stylesheet" src="/css/article/articleViewpage.css">
</head>
<body>

{{>layout/navbar}}

<section class="home">
    <div class="text">HOME</div>

    <button class ="btn btn-primary writing_btn"
            data-bs-toggle="modal"
            data-bs-target="#article-create-modal"
            id = "write_btn">Writing</button>

    <div class="drop">
        <div class="drop__container" id='drop-item'>

        {{#articles}}
            <div class="drop__card">
                <div class="drop__data">
                    <img src="image/user.png" alt="" class="drop__img">
                    <div>
                        <h1 class="drop__name">{{author}}</h1>
                        <span class="drop__proffession">Web Developer</span>
                    </div>

                    <div class="drop__title">
                        <h1>[{{id}}] {{title}}</h1>
                    </div>
                </div>
                <input type="hidden" id = "article_id" value = "{{id}}">
                <div>
                    <a href="" class="drop__soc"><i class='bx bxl-instagram'></i></a>
                    <a href="" class="drop__soc"><i class='bx bxl-facebook'></i></a>
                    <a href="" class="drop__soc"><i class='bx bxl-twitter' ></i></a>
                </div>
            </div>
        {{/articles}}

        </div>
    </div>


    <!-- Modal -->
    <div class="modal fade" id="article-create-modal" tabindex="-1">
        <div class="modal-dialog">
            <div class = "modal-content container" id="new_article_modal">
                <div class="modal-body">
                    <div class = "login_form">
                        <div class="title">New Article</div>
                        <div class="input-box underline">
                            <input type="text" id = "new_article_author" value="{{userNickname}}" readonly>
                            <div class="underline"></div>
                        </div>
                        <div class="input-box underline">
                            <input type="text" id = "new_article_title" placeholder="Enter Title" required>
                            <div class="underline"></div>
                        </div>
                        <div class="input-text-box">
                            <textarea type="text" id = "new_article_content" placeholder="Enter Content" required></textarea>
                            <div class="underline"></div>
                        </div>

                        <div class="input-box button" style="float: left">
                            <input type="submit" name="" value="Registration" id = "article_resist_btn" onclick="createArticle()">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    const articles = document.querySelectorAll(".drop__card");

    articles.forEach(article => {
        article.addEventListener("click", (event) =>{
            viewArticle(event);
        })
    });
</script>

<script src="/js/article/article.js"></script>
{{>layout/footer}}